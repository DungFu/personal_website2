.sprite {
    background-image: url(img/sprites.png);
    background-repeat: no-repeat;
    display: inline-block;
}

sprite-size = 64px
sprite-padding = 2px

sprites-rows = 'email' 'facebook' 'github' 'stackoverflow',
    'googleplus' 'instagram' 'linkedin' 'starcraft2',
    'playstation' 'skype' 'soundcloud' 'steam',
    'twitter' 'xbox' 'overwatch' 'hots',
    'd3'

sprite-offset(position)
    -(sprite-padding)-((sprite-size+(sprite-padding*2))*position)

for sprites-row, y-pos in sprites-rows
    for sprite, x-pos in sprites-row
        .sprite-{sprite} {
            width: sprite-size;
            height: sprite-size;
            background-position: sprite-offset(x-pos) sprite-offset(y-pos);
        }

