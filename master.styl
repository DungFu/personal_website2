.viewport {
    overflow: hidden;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    perspective: 1000px;
    transform-style: preserve-3d;
    perspective-origin: 50% 50%;
}

#cube-1 {
    position: relative;
    margin-top: 25vmin;
    margin-left: 50vmin;
    height: 25vmin;
    width: 25vmin;
}

#cube-1.open {
    margin-left: 25vmin;
}

#cube-1.corner {
    margin-top: 0;
    margin-left: 0;
}

.cube {
    transform-style: preserve-3d;
    transform-origin: 12.5vmin 12.5vmin -12.5vmin;
}

.cube.transitions {
    transition: transform 2s ease, margin 2s ease;
}

.cube .cube-side {
    box-sizing: border-box;
    cursor: pointer;
    position: absolute;
    height: 25vmin;
    width: 25vmin;
    background-color: #B891C3;
    border: 1px solid #fff;
    overflow: hidden;
    transform-style: preserve-3d;
    transition: transform 2s ease, background-color 0.3s ease;
    backface-visibility: hidden;
}

.cube .cube-side:hover {
    background-color: #A86B97;
}

.cube .top {
    transform-origin: 50% 100%;
    transform: translateY(-25vmin) rotateX(90deg);
}
.cube .top.unfold {
    transform: translateY(-25vmin) rotateX(0deg);
}

.cube .bottom {
    transform-origin: 50% 0%;
    transform: translateY(25vmin) rotateX(-90deg);
}
.cube .bottom.unfold {
    transform: translateY(25vmin) rotateX(0deg);
}

.cube .back {
    transform-origin: 0% 50%;
    transform: translateX(25vmin) rotateY(90deg);
}
.cube .back.unfold {
    transform: translateX(25vmin) rotateY(0deg);
}

.cube .front {
    transform: translateZ(0vmin);
}

.cube .right {
    transition: transform 2s ease;
    transform-style: preserve-3d
    transform-origin: 0% 50%;
    transform: translateX(25vmin) rotateY(90deg);
}
.cube .right.unfold {
    transform: translateX(25vmin) rotateY(0deg);
}

.cube .left {
    transform-origin: 100% 50%;
    transform: translateX(-25vmin) rotateY(-90deg);
}
.cube .left.unfold {
    transform: translateX(-25vmin) rotateY(0deg);
}

