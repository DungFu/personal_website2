@import 'nib'

html, body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    font-family: 'Open Sans', sans-serif;
}

body {
    background-image: url(img/skyline.png);
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-position: center bottom;
    background-size: 100%;
    overflow: hidden;
}

#close-button {
    opacity: 0;
    position: absolute;
    left: 3vmin;
    top: 3vmin;
    width: 5vmin;
    height: 5vmin;
    transition: opacity 1s ease;
}

#close-button.show {
    opacity: 1.0;
    cursor: pointer;
}

.content {
    border-radius: 3px 0 0 0;
    overflow: auto;
    position: absolute;
    left: 51vmin;
    top: 100%;
    right: 0;
    bottom: 0;
    background-color: #a69fa9;
    opacity: 0.0;
    transition: top 1s ease, opacity 1s ease;
}

.content.show {
    opacity: 0.97;
    top: 51vmin;
}

.content p {
    float: left;
}

.content-container {
    padding: 2vmin 5vmin 2vmin 5vmin;
}

.content h1 {
    text-align: center;
    color: #BEDB39;
}

.mosaic-img {
    cursor: pointer;
    width: 19vmin;
    height: 19vmin;
    background-image: url(img/thumbnails/thumbs_all.jpg);
    background-size: 57vmin 38vmin;
    position: relative;
    border-radius: 3px;
    float: left;
    margin: 2vmin;
    transition: all 0.5s ease;
}

.mosaic-bg {
    background-color: rgba(138, 9, 23, 0.65);
    border-radius: 3px;
    opacity: 0;
    position: absolute;
    height: 100%;
    width: 100%;
    transition: opacity 0.3s ease;
}

.mosaic-bg:hover {
    opacity: 1.0;
}

.project-img {
    float: left;
    width: 38vmin;
    margin: 0 2vmin 2vmin 0;
    border-radius: 3px;
    transition: box-shadow 0.3s ease;
}

.project-img:hover {
    box-shadow: 0 0 10px 0 rgba(138, 9, 23, 0.5);
}

.back-button {
    cursor: pointer;
    position: absolute;
    top: 50%;
    width: 4vmin;
    margin-left: -5vmin;
    margin-top: -2vmin;
}

.mosaic-text {
    font-size: 2vmin;
    color: #ccc;
    opacity: 1.0;
    position: absolute;
    width: 100%;
    padding-top: 50%;
    margin-top: -1vmin;
    text-align: center;
    transition: opacity 0.3s ease;
}

.back-button2 {
    top: -6px;
    cursor: pointer;
    position: relative;
    background: #333953;
    background: linear-gradient(top, #3f4666, #272c40);
    display: inline-block;
    padding: 6px 8px 6px 4px;
    color: whitesmoke;
    text-decoration: none;
    font: 14px "proxima nova", helvetica, arial, sans-serif;
    border-radius: 3px;
    z-index: 1;
    margin-right: 3vmin;
}
.back-button2:before {
    content: "";
    height: 20px;
    width: 20px;
    position: absolute;
    background: #333953;
    background: linear-gradient(top left, #3f4666, #272c40);
    left: -9px;
    display: block;
    top: 4px;
    transform: rotate(45deg);
    z-index: -1;
    border-radius: 3px;
}

