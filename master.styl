@import 'nib'

html, body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    font-family: 'Open Sans', sans-serif;
    -webkit-font-smoothing: antialiased;
}

body {
    background-image: url(img/skyline.png);
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-position: center bottom;
    background-size: 100%;
    overflow: hidden;
}

#close-button {
    cursor: pointer;
    opacity: 0;
    position: absolute;
    left: 3vw;
    top: 3vw;
    width: 5vw;
    height: 5vw;
    transition: opacity 1s ease;
    cursor: auto;
}

#close-button.show {
    opacity: 1.0;
    cursor: pointer;
}

#fading-overlay {
    position: absolute;
    top: 0;
    left: 0
    width: 100%;
    height: 100%;
    background-color: #000000;
    opacity: 0;
    transition: opacity 1s ease;
    pointer-events: none;
}

#fading-overlay.show {
    opacity: 0.75;
    pointer-events: auto;
}

.content {
    overflow: auto;
    position: absolute;
    top: 100%;
    bottom: 0;
    left: 50%;
    width: 100%;
    transform: translateX(-50%);
    background-color: #ffffff;
    opacity: 0.0;
    outline: 1px solid #BFBFBF;
    transition: top 1s ease, opacity 1s ease;
    max-width: 1024px;
}

.content.show {
    opacity: 1;
    top: 0;
}

.content p {
    width: 100%;
    float: left;
}

.content-container {
    padding: 0 2em 2em 2em;
}

.content-subcontainer {
    clear: both;
}

.content h1 {
    text-align: center;
    color: rgb(26, 116, 45);
}

.content h3 {
    text-align: center;
    color: rgb(26, 116, 45);
}

project-img-width = 33%

.project-img-wrap {
    position: relative;
    width: 33%;
    height: 0;
    margin: 0 1em 1em 0;
    padding-top: project-img-width;
    float: left;
    background-image: url('img/loading.gif');
    background-repeat: no-repeat;
    background-position: center;
}

.project-img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    border-radius: 3px;
    transition: box-shadow 0.3s ease;
}

.project-img:hover {
    box-shadow: 0 0 10px 0 rgba(138, 9, 23, 0.5);
}

